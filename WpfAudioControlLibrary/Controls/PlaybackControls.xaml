<UserControl x:Class="WpfAudioControlLibrary.Controls.PlaybackControls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfAudioControlLibrary.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="800">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Content="SkipStart" Command="{Binding SkipToStartCommand}"/>
            <Button Grid.Column="1" Content="Stop" Command="{Binding StopCommand}"/>
            <Button Grid.Column="2" Content="Play" Command="{Binding PlayCommand}"/>
            <Button Grid.Column="3" Content="Pause" Command="{Binding PauseCommand}"/>
            <Button Grid.Column="4" Content="Eject" Command="{Binding EjectCommand}"/>
            <StackPanel Grid.Column="5" VerticalAlignment="Stretch">
                <ToggleButton IsChecked="{Binding IsAutoPlayChecked}" Content="Autoplay" Margin="2"/>
                <ToggleButton IsChecked="{Binding IsLoopPlayChecked}" Content="Loop" Margin="2"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
